{
  "name": "claude-opus-wrapper",
  "version": "1.0.0",
  "description": "A high-performance wrapper for Claude Opus 4 using OpenRouter",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "test": "node --test test/*.test.js",
    "dev:client": "cd web && npx vite",
    "dev:server": "node src/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "cd web && npx vite build",
    "serve": "cd web && npx vite preview",
    "postinstall": "cd web && npm install"
  },
  "keywords": [
    "claude",
    "opus",
    "openrouter",
    "ai",
    "wrapper",
    "anthropic"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.16"
  }
}
